{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "types": [],
        "plugins": [
            {
                "name": "typescript-yaml-plugin"
            }
        ]
    },
    "include": [
        "src",
        "src/types"
    ]
}